#!/usr/bin/env bash
set -e
if [[ ! -d "/home/flakelolz/life/gamedev/rust/bevy/rts" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/flakelolz/life/gamedev/rust/bevy/rts")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/flakelolz/life/gamedev/rust/bevy/rts" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/flakelolz/life/gamedev/rust/bevy/rts/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/flakelolz/life/gamedev/rust/bevy/rts/.envrc" "/home/flakelolz/life/gamedev/rust/bevy/rts/.direnv"/*.rc
